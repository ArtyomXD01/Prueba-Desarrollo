@model List<Models.Modelos.Region>
@{
    ViewData["Title"] = "Regiones de Chile";
}

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="display-4">
                <i class="bi bi-geo-alt-fill text-primary"></i> Regiones de Chile
            </h1>
            <p class="lead text-muted">Seleccione una región para ver más detalles y sus comunas</p>
        </div>
    </div>


    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle-fill"></i>
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    <div id="mensajeAlerta" class="alert alert-success d-none" role="alert">
        <i class="bi bi-check-circle-fill"></i> <span id="textoAlerta"></span>
    </div>
    <div class="col">
        <button class="btn btn-primary" onclick="cargarRegiones()"><i class="bi bi-arrow-clockwise"></i> Refrescar</button>
    </div>
    <div class="row">

        <div class="row g-4">
            <!-- Panel Izquierdo: Lista de Regiones -->
            <div class="col-lg-4 col-md-5">
                <div class="card">
                    <div class="card-header">
                        <i class="bi bi-map"></i> Regiones de Chile
                    </div>
                    <div class="card-body p-0">
                        <div class="list-group list-group-flush scroll-container" id="listaRegiones">
                            <!-- Las regiones se cargarán aquí -->

                        </div>
                    </div>
                    <div class="card-footer">
                        <a asp-action="Details" asp-route-id="0" class="btn btn-outline-primary btn-sm" onclick="cargarDetallesRegion(0)"
                           data-bs-toggle="modal" data-bs-target="#modalDetallesRegion">
                            <i class="bi bi-info-circle"></i> Agregar Región
                        </a>
                    </div>
                </div>
            </div>

            <!-- Panel Derecho: Lista de Comunas -->
            <div class="col-lg-8 col-md-7">
                <div class="card">
                    <div class="card-header">
                        <i class="bi bi-building"></i> <span id="tituloComuna">Comunas</span>
                    </div>
                    <div class="card-body">
                        <div id="loadingComunas" class="text-center d-none py-5">
                            <div class="spinner-border text-primary" role="status">
                                <span class="visually-hidden">Cargando...</span>
                            </div>
                            <p class="mt-3 text-muted">Cargando comunas...</p>
                        </div>

                        <div id="contenidoComunas">
                            <div class="empty-state">
                                <i class="bi bi-arrow-left-circle"></i>
                                <h5>Seleccione una región</h5>
                                <p class="text-muted">Para ver la lista de comunas correspondientes</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal: Detalles de Región -->
    <div class="modal fade" id="modalDetallesRegion" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header bg-primary text-white">
                    <h5 class="modal-title">
                        <i class="bi bi-geo-alt-fill"></i> Detalles de la Región
                    </h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body" id="contenidoDetallesRegion">
                    <div class="text-center py-4">
                        <div class="spinner-border text-primary" role="status">
                            <span class="visually-hidden">Cargando...</span>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" id="btnGuardarRegion" name="btnGuardarRegion" class="btn btn-warning"><i class="bi bi-save"></i>Guardar</button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal: Editar Comuna -->
    <div class="modal fade" id="modalEditarComuna" tabindex="-1" aria-labelledby="modalEditarComunaLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header bg-warning">
                    <h5 class="modal-title" id="modalEditarComunaLabel">
                        <i class="bi bi-pencil-square"></i> Editar Comuna
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form id="formEditarComuna">
                        <input type="hidden" id="editIdComuna" />
                        <input type="hidden" id="editIdRegion" />

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label class="form-label fw-bold text-muted">
                                    <i class="bi bi-hash"></i> ID Comuna
                                </label>
                                <input type="text" class="form-control-plaintext" id="displayIdComuna" readonly />
                            </div>
                            <div class="col-md-6">
                                <label class="form-label fw-bold text-muted">
                                    <i class="bi bi-map"></i> ID Región
                                </label>
                                <input type="text" class="form-control-plaintext" id="displayIdRegion" readonly />
                            </div>
                        </div>

                        <div class="mb-3">
                            <label for="editNombreComuna" class="form-label fw-bold">
                                <i class="bi bi-building"></i> Nombre de la Comuna <span class="text-danger">*</span>
                            </label>
                            <input type="text" class="form-control form-control-lg" id="editNombreComuna" required
                                   placeholder="Ingrese el nombre de la comuna" maxlength="128" />
                            <div class="invalid-feedback">
                                El nombre de la comuna es requerido.
                            </div>
                        </div>

                        <div class="mb-3">
                            <label for="editInformacion" class="form-label fw-bold">
                                <i class="bi bi-file-code"></i> Información Adicional (XML)
                            </label>
                            <textarea class="form-control font-monospace" id="editInformacion" rows="10"
                                      placeholder="<info>&#10;  <poblacion>500000</poblacion>&#10;  <superficie>641.4</superficie>&#10;  <densidad>8320000</densidad>&#10;</info>"></textarea>
                            <small class="form-text text-muted">
                                <i class="bi bi-info-circle"></i> Formato XML opcional para información adicional
                            </small>
                        </div>
                    </form>

                    <div class="alert alert-info border-0">
                        <i class="bi bi-lightbulb-fill"></i> <strong>Nota:</strong> Los cambios se guardarán mediante procedimiento almacenado con instrucción MERGE.
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                        <i class="bi bi-x-circle"></i> Cancelar
                    </button>
                    <button type="button" class="btn btn-warning" id="btnGuardarComuna">
                        <i class="bi bi-save"></i> Guardar 
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>
