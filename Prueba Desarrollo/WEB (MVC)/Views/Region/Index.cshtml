@model List<Models.Modelos.Region>
@{
    ViewData["Title"] = "Regiones de Chile";
}

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="display-4">
                <i class="bi bi-geo-alt-fill text-primary"></i> Regiones de Chile
            </h1>
            <p class="lead text-muted">Seleccione una región para ver más detalles y sus comunas</p>
        </div>
    </div>


    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle-fill"></i>
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    <div class="col">
        <button class="btn-primary"><i class="bi bi-arrow-clockwise" onclick="cargarRegiones()" ></i></button>
    </div>
    <div class="row">

        <div class="row g-4">
            <!-- Panel Izquierdo: Lista de Regiones -->
            <div class="col-lg-4 col-md-5">
                <div class="card">
                    <div class="card-header">
                        <i class="bi bi-map"></i> Regiones de Chile
                    </div>
                    <div class="card-body p-0">
                        <div class="list-group list-group-flush scroll-container" id="listaRegiones">
                            <!-- Las regiones se cargarán aquí -->

                        </div>
                    </div>
                </div>
            </div>

            <!-- Panel Derecho: Lista de Comunas -->
            <div class="col-lg-8 col-md-7">
                <div class="card">
                    <div class="card-header">
                        <i class="bi bi-building"></i> <span id="tituloComuna">Comunas</span>
                    </div>
                    <div class="card-body">
                        <div id="loadingComunas" class="text-center d-none py-5">
                            <div class="spinner-border text-primary" role="status">
                                <span class="visually-hidden">Cargando...</span>
                            </div>
                            <p class="mt-3 text-muted">Cargando comunas...</p>
                        </div>

                        <div id="contenidoComunas">
                            <div class="empty-state">
                                <i class="bi bi-arrow-left-circle"></i>
                                <h5>Seleccione una región</h5>
                                <p class="text-muted">Para ver la lista de comunas correspondientes</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        @if (Model != null && Model.Any())
        {
            @foreach (var region in Model)
            {
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card h-100 shadow-sm hover-card">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start mb-3">
                                <h5 class="card-title mb-0">@region.NombreRegion</h5>
                            </div>
                            <p class="card-text text-muted">
                                <small><i class="bi bi-hash"></i> ID: @region.IdRegion</small>
                            </p>
                        </div>
                        <div class="card-footer bg-white border-top-0">
                            <div class="d-grid gap-2">
                                <a asp-action="Details" asp-route-id="@region.IdRegion" class="btn btn-outline-primary btn-sm" onclick="cargarDetallesRegion(@region.IdRegion)" data-bs-toggle="modal" data-bs-target="#modalDetallesRegion">
                                    <i class="bi bi-info-circle"></i> Ver Detalles
                                </a>
                                <a asp-action="Comunas" asp-route-id="@region.IdRegion" class="btn btn-primary btn-sm" onclick="cargarComunas(@region.IdRegion,@region.NombreRegion)" data-bs-toggle="modal" data-bs-target="#modalComunas">
                                    <i class="bi bi-building"></i>Ver Comunas
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12">
                <div class="alert alert-info">
                    <i class="bi bi-info-circle"></i> No hay regiones disponibles.

                </div>
                <div class="col">
                    <button type="button" class="btn btn-outline-primary btn-sm" data-bs-toggle="modal" data-bs-target="#modalDetallesRegion" onclick="cargarDetallesRegion(0)">
                        <i class="bi bi-info-circle">
                        </i>
                        Agregar region
                    </button>
                </div>
            </div>
        }
    </div>

    <!-- Modal: Detalles de Región -->
    <div class="modal fade" id="modalDetallesRegion" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header bg-primary text-white">
                    <h5 class="modal-title">
                        <i class="bi bi-geo-alt-fill"></i> Detalles de la Región
                    </h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body" id="contenidoDetallesRegion">
                    <div class="text-center py-4">
                        <div class="spinner-border text-primary" role="status">
                            <span class="visually-hidden">Cargando...</span>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" id="btnGuardarRegion" name="btnGuardarRegion" class="btn btn-secondary" >Guardar</button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                </div>
            </div>
        </div>
    </div>
    <!-- Modal: Lista de Comunas -->
